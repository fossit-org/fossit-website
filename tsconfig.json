{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    
    /* Path aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src/**/*", "components/**/*", "styles/**/*", "imports/**/*", "*.tsx"],
  "exclude": [
    "**/*.d.ts",
    "node_modules",
    "dist",
    "build",
    ".vercel",
    "vite.config.ts",
    "vite.config.d.ts",
    "**/ui/form.tsx",
    "**/ui/sidebar.tsx",
    "**/ui/sonner.tsx"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
